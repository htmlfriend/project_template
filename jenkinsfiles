#!groovy
// Check mint properties
properties([disableConcurrentBuilds()])

pipeline {
    agent none
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
                sh 'ssh root@mint \'hostname\''
            }
        }
        stage("Second step") {
            steps {
                sh 'ssh root@mint \'uptime\''
            }
        }
    }
}
